import rsgislib.tools
import argparse

parser = argparse.ArgumentParser(prog='rsgisimg2kmz.py', description='''Create a KMZ file of the input image...''')

parser.add_argument("-i", "--input", type=str, required=True, help='Input image.')
parser.add_argument("-o", "--output", type=str, required=True, help='Output directory within which the tile cache can be found.')
parser.add_argument("-b", "--bands", type=str, required=True, help='Comma seperated set of bands. Either single or r,g,b.')
parser.add_argument("-z", "--zoom", type=str, default="2-10", help='What zoom levels do you wish to be calculated, e.g., 2-10, 1-12.')
parser.add_argument("-r", "--resample", type=str, default="average", choices=['average', 'near', 'bilinear', 'cubic', 'cubicspline', 'lanczos', 'antialias'], help='Method of resampling to produce the tile cache; Default: average')
parser.add_argument("-f", "--finite", action='store_true', default=False, help='Apply a finite mask to the input image before stretching.')

# Call the parser to parse the arguments.
args = parser.parse_args()

rsgislib.tools.createWebTilesImg(args.input, args.output, args.bands, args.zoom, args.resample, args.finite)

